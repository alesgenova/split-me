{
  "name": "split-me",
  "version": "1.1.2",
  "description": "Universal web component to create arbitrary split layouts ",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.spec": "stencil test --spec",
    "test.e2e": "stencil test --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "prepublishOnly": "rm -rf .stencil/ dist/ www/ && npm install && npm run build"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1"
  },
  "devDependencies": {
    "@stencil/core": "^0.13.2",
    "@types/jest": "^23.3.2",
    "@types/lodash.throttle": "^4.1.4",
    "@types/puppeteer": "1.9.0",
    "husky": "^1.0.1",
    "jest": "23.5.0",
    "pixelmatch": "4.0.2",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "puppeteer": "1.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alesgenova/split-me.git"
  },
  "author": "Alessandro Genova",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alesgenova/split-me"
  },
  "homepage": "https://github.com/alesgenova/split-me",
  "keywords": [
    "splitter",
    "split-layout",
    "stenciljs",
    "javascript",
    "typescript",
    "webcomponents"
  ],
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
